@model OrderAddDto

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="checkout_area section_padding_100">
	<div class="container">
		<div class="row">

			<div class="col-12 col-md-6">
				<div class="checkout_details_area mt-50 clearfix">

					<div class="cart-page-heading">
						<h5>TESLİMAT BİLGİLERİ</h5>
						<p>Üyü olarak avantajlardan faydalanabilirsiniz.</p>
					</div>

					<form asp-controller="Order" asp-action="Index" method="post">
						<div asp-validation-summary="ModelOnly"></div>
						<div class="row">
							<div class="col-md-6 mb-3">
								<label asp-for="FirstName" for="first_name">İSİM <span>*</span></label>
								<input type="text" class="form-control" id="first_name" asp-for="FirstName" value="" required>
								<span asp-validation-for="FirstName" class="text-danger"></span>
							</div>
							<div class="col-md-6 mb-3">
								<label asp-for="LastName" for="last_name">SOYİSİM <span>*</span></label>
								<input type="text" class="form-control" id="last_name" asp-for="LastName" value="" required>
								<span asp-validation-for="LastName" class="text-danger"></span>
							</div>
							<div class="col-12 mb-3">
								<label asp-for="ShippingAddress" for="street_address">TESLİMAT ADRESİ <span>*</span></label>
								<textarea type="text" style="height:140px;" class="form-control mb-3" asp-for="ShippingAddress" value="" required></textarea>
								<span asp-validation-for="ShippingAddress" class="text-danger"></span>
							</div>
							<div class="col-12 mb-3">
								<label asp-for="PostCode" for="postcode">POSTA KODU <span>*</span></label>
								<input type="text" class="form-control" id="postcode" asp-for="PostCode" value="" required>
								<span asp-validation-for="PostCode" class="text-danger"></span>
							</div>
							<div class="col-12 mb-3">
								<label asp-for="PhoneNumber" for="phone_number">TELEFON NUMARASI <span>*</span></label>
								<input type="text" class="form-control" id="phone_number" asp-for="PhoneNumber" value="" required>
								<span asp-validation-for="PhoneNumber" class="text-danger"></span>
							</div>
							<div class="col-12 mb-4">
								<label asp-for="EmailAddress" for="email_address">MAİL ADRESİ <span>*</span></label>
								<input type="email" class="form-control" id="email_address" asp-for="EmailAddress" value="" required>
								<span asp-validation-for="EmailAddress" class="text-danger"></span>
							</div>

							<div class="col-12">
								<div class="custom-control custom-checkbox d-block mb-2">
									<input type="checkbox" class="custom-control-input" id="customCheck1">
									<label class="custom-control-label" for="customCheck1">AYDINLATMA METNİ</label>
								</div>
								<div class="custom-control custom-checkbox d-block">
									<input type="checkbox" class="custom-control-input" id="customCheck2">
									<label class="custom-control-label" for="customCheck2">MESAFELİ SATIŞ SÖZLEŞMESİ</label>
								</div>
							</div>
								<button style="margin-top:3em;" class="btn karl-checkout-btn" type="submit">SİPARİŞ VER</button>
						</div>
					</form>
				</div>
			</div>

			<div class="col-12 col-md-6 col-lg-5 ml-lg-auto">
				<div class="order-details-confirmation">

					<div class="cart-page-heading">
						<h5>SİPARİŞİNİZ</h5>
						<p>Detaylar</p>
					</div>

					<ul class="order-details-form mb-4">
						<li><span>ÜRÜN</span> <span>FİYAT</span></li>

						@await Component.InvokeAsync("OrderPageWithCart")

					</ul>


					<div id="accordion" role="tablist" class="mb-4">
						<div class="card">
							<div class="card-header" role="tab" id="headingOne">
								<h6 class="mb-0">
									<a data-toggle="collapse" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne"><i class="fa fa-circle-o mr-3"></i>İADE KOŞULLARI</a>
								</h6>
							</div>

							<div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
								<div class="card-body">
									<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin pharetra tempor so dales. Phasellus sagittis auctor gravida. Integ er bibendum sodales arcu id te mpus. Ut consectetur lacus.</p>
								</div>
							</div>
						</div>
						<div class="card">
							<div class="card-header" role="tab" id="headingTwo">
								<h6 class="mb-0">
									<a class="collapsed" data-toggle="collapse" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo"><i class="fa fa-circle-o mr-3"></i>TESLİMAT DETAYLARI</a>
								</h6>
							</div>
							<div id="collapseTwo" class="collapse" role="tabpanel" aria-labelledby="headingTwo" data-parent="#accordion">
								<div class="card-body">
									<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Explicabo quis in veritatis officia inventore, tempore provident dignissimos.</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

