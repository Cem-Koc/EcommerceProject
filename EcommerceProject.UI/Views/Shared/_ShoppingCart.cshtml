@model Cart

@if (Model != null)
{
	@foreach (var cartItem in Model.MyCart)
	{
		<li>
			<a asp-controller="Product" asp-action="GetByIdProductDetail" asp-route-id="@cartItem.ID" class="image"><img src="~/images/@cartItem.ImageFileName" class="cart-thumb" alt=""></a>
			<div class="cart-item-desc">
				<h6><a asp-controller="Product" asp-action="GetByIdProductDetail" asp-route-id="@cartItem.ID">@cartItem.Name</a></h6>
				<p>@cartItem.Amount Adet - <span class="price">@cartItem.Price₺</span></p>
			</div>
			<span class="dropdown-product-remove"><i class="icon-cross"></i></span>
		</li>
	}


	<li class="total">
		<span class="pull-right">Toplam: @Model.TotalPrice₺</span>
		<a asp-controller="Shopping" asp-action="CartPage" class="btn btn-sm btn-cart">Sepet</a>
		<a asp-controller="Order" asp-action="Index" class="btn btn-sm btn-checkout">Ödeme</a>
	</li>
}
else
{
	<li>
		<span>SEPETİNİZDE ÜRÜN BULUNMAMAKTADIR.</span>
	</li>
}


