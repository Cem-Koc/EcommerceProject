@model ProductColorAddDto
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-lg-10">
		<h2>Ürün Rengi Ekleme İşlemleri</h2>
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="index.html">Ana Sayfa</a>
			</li>
			<li class="breadcrumb-item active">
				<strong>Ürün Rengi Ekleme</strong>
			</li>
		</ol>
	</div>
	<div class="col-lg-2">
	</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox ">
				<div class="ibox-title">
					<h5>Ürün Rengi Ekleme Formu <small>Tüm bilgileri eksiksiz doldurmanız gerekmektedir.</small></h5>
					<div class="ibox-tools">
						<a class="collapse-link">
							<i class="fa fa-chevron-up"></i>
						</a>
						<a class="dropdown-toggle" data-toggle="dropdown" href="#">
							<i class="fa fa-wrench"></i>
						</a>
						<ul class="dropdown-menu dropdown-user">
							<li>
								<a href="#" class="dropdown-item">Config option 1</a>
							</li>
							<li>
								<a href="#" class="dropdown-item">Config option 2</a>
							</li>
						</ul>
						<a class="close-link">
							<i class="fa fa-times"></i>
						</a>
					</div>
				</div>
				<div class="ibox-content">
					<form method="post" asp-controller="ProductColor" asp-action="Add" enctype="multipart/form-data">
						<div asp-validation-summary="ModelOnly"></div>
						<div class="form-group  row">
							<label class="col-sm-2 col-form-label" asp-for="Color">Ürün Rengi</label>
							<div class="col-sm-10"><input type="text" class="form-control" asp-for="Color"></div>
							<span asp-validation-for="Color" class="text-danger"></span>
						</div>
						<div class="hr-line-dashed"></div>
						<div class="form-group row">
							<div class="col-sm-4 col-sm-offset-2">
								<button class="btn btn-primary btn-sm" type="submit">Ürün Rengi Ekle</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

