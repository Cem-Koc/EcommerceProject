
@model ImagesOperationsDto
@{
    ViewData["Title"] = "ImagesUpload";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-lg-10">
		<h2>Ürün Ekleme İşlemleri</h2>
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="index.html">Ana Sayfa</a>
			</li>
			<li class="breadcrumb-item active">
				<strong>Ürün Ekleme</strong>
			</li>
		</ol>
	</div>
	<div class="col-lg-2">
	</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox ">
				<div class="ibox-title">
					<h5>Ürün Ekleme Formu <small>Tüm bilgileri eksiksiz doldurmanız gerekmektedir.</small></h5>
					<div class="ibox-tools">
						<a class="collapse-link">
							<i class="fa fa-chevron-up"></i>
						</a>
						<a class="dropdown-toggle" data-toggle="dropdown" href="#">
							<i class="fa fa-wrench"></i>
						</a>
						<ul class="dropdown-menu dropdown-user">
							<li>
								<a href="#" class="dropdown-item">Config option 1</a>
							</li>
							<li>
								<a href="#" class="dropdown-item">Config option 2</a>
							</li>
						</ul>
						<a class="close-link">
							<i class="fa fa-times"></i>
						</a>
					</div>
				</div>
				<div class="ibox-content">
					<form method="post" asp-controller="Product" asp-action="ImagesUpload" enctype="multipart/form-data">
						<div asp-validation-summary="ModelOnly"></div>
						<input type="hidden" asp-for="ID" />
						<input type="hidden" asp-for="CategoryID" />
						<input type="hidden" asp-for="ProductSizeID" />
						<input type="hidden" asp-for="CustomerTypeID" />
						<input type="hidden" asp-for="ProductColorID" />
						<input type="hidden" asp-for="ProductName" />
						<div class="form-group  row">
							<label class="col-sm-2 col-form-label" asp-for="ProductName">Ürün İsmi</label>
							<div class="col-sm-10"><input type="text" class="form-control" asp-for="ProductName" value="@Model.ProductName" disabled></div>
							<span asp-validation-for="ProductName" class="text-danger"></span>
						</div>
						<div class="hr-line-dashed"></div>
						<div class="form-group row">
							<label class="col-sm-2 col-form-label" asp-for="ProductCode">Ürün Kodu</label>
							<div class="col-sm-10">
								<input type="text" asp-for="ProductCode" class="form-control" value="@Model.ProductCode" disabled>
							</div>
							<span asp-validation-for="ProductCode" class="text-danger"></span>
						</div>
						<div class="hr-line-dashed"></div>
						<div class="form-group row">
							<label class="col-sm-2 col-form-label" asp-for="ProductColorID">Ürün Rengi</label>
							<div class="col-sm-10">
								<select class="form-control m-b" asp-for="ProductColorID" asp-items="@(new SelectList(Model.ProductColors,"ID","Color"))" disabled></select>
							</div>
							<span asp-validation-for="ProductColorID" class="text-danger"></span>
						</div>
						<div class="hr-line-dashed"></div>
						<div class="form-group row">
							<label class="col-sm-2 col-form-label" asp-for="ProductSizeID">Ürün Bedeni</label>
							<div class="col-sm-10">
								<select class="form-control m-b" asp-for="ProductSizeID" asp-items="@(new SelectList(Model.ProductSizes,"ID","Size"))" disabled></select>
							</div>
							<span asp-validation-for="ProductSizeID" class="text-danger"></span>
						</div>
						<div class="hr-line-dashed"></div>
						<div class="form-group row">
							<label class="col-sm-2 col-form-label" asp-for="CustomerTypeID">Müşteri Tipi</label>
							<div class="col-sm-10">
								<select class="form-control m-b" asp-for="CustomerTypeID" asp-items="@(new SelectList(Model.CustomerTypes,"ID","CustomerTypeName"))" disabled></select>
							</div>
							<span asp-validation-for="CustomerTypeID" class="text-danger"></span>
						</div>
						<div class="hr-line-dashed"></div>
						<div class="form-group row">
							<label class="col-sm-2 col-form-label" asp-for="CategoryID">Kategori</label>
							<div class="col-sm-10">
								<select class="form-control m-b" asp-for="CategoryID" asp-items="@(new SelectList(Model.Categories,"ID","CategoryName"))" disabled></select>
							</div>
							<span asp-validation-for="CategoryID" class="text-danger"></span>
						</div>
						<div class="form-group  row">
							<label class="col-sm-2 col-form-label" asp-for="Image">Ürün Resmi</label>
							<div class="col-sm-10"><input type="file" accept="image/*" class="form-control" asp-for="Image"></div>
							<span asp-validation-for="Image" class="text-danger"></span>
						</div>
						<div class="hr-line-dashed"></div>
						<div class="form-group row">
							<div class="col-sm-4 col-sm-offset-2">
								<button class="btn btn-primary btn-sm" type="submit">Resim Ekle</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
